include ../../node_modules/jade-bootstrap/components/labels
//- Including Modal dialog mixins
include ../../node_modules/jade-bootstrap/components/modal
//- Including List group mixins
include ../../node_modules/jade-bootstrap/components/list-groups
//- Including Progress bar mixins
include ../../node_modules/jade-bootstrap/components/progress-bars
//- Including Button mixins
include ../../node_modules/jade-bootstrap/components/buttons

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1")
    meta(name="description",content="")
    meta(name="author",content="")
    link(rel="icon",href="../../favicon.ico")
    title hackeReader

    link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css')

    //- !-- Custom styles for this view --
    link(href="../css/style.css", rel="stylesheet")

  body
    div.jumbotron.titular
      h1 HN Feed
      p We <3 hackers news!
    if cargando 
      div.cargador
        +progress-bar(100,"striped active")   

    div.noticias
      each noticia in noticias
        div.row.noticia(onclick='irNoticia("'+noticia.url+'")')
          div.col-md-9
            p.titulo=noticia.titulo + " · "
            p.autor=noticia.autor + " · "
          //-div.col-md-3.autor=noticia.autor
          div.col-md-2.fecha=noticia.fecha
          div.col-md-1
            a(class="clickEliminar" data-noticia=''+noticia.idnoticia+'' title="Delete new")
              span.badge            
                i.fa.fa-trash-o

      //- Scripts
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
      script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
      script(src="js/index.js")